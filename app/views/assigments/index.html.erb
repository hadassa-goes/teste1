<p id="notice"><%= notice %></p>

<h1>Listing Assigments</h1>

<table>
  <thead>
    <tr>
      <th>Zombie</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @assigments.each do |assigment| %>
      <tr>
        <td><%= assigment.zombie_id %></td>
        <td><%= assigment.role_id %></td>
        <td><%= link_to 'Show', assigment %></td>
        <td><%= link_to 'Edit', edit_assigment_path(assigment) %></td>
        <td><%= link_to 'Destroy', assigment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

